# Database
DATABASE_URL=sqlite:///./meeting_assistant.db

# Google Calendar API (Optional - for calendar integration)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OPEA Integration (Optional)
OPEA_API_URL=https://your-opea-instance.com/api
OPEA_API_KEY=your_opea_api_key_here

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Model Configuration
WHISPER_MODEL_SIZE=base
ENABLE_GPU=false

# File Upload Limits
MAX_UPLOAD_SIZE=200MB
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,flac
